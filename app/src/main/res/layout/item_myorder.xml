<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginStart="@dimen/_4sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_2sdp"
    app:cardElevation="@dimen/_2sdp"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        >
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:textColor="#000000"
            android:text="@string/date"
            android:textSize="@dimen/_12sdp"
            />
        <TextView
            android:id="@+id/T_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:textColor="#000000"
            android:layout_toEndOf="@+id/date"
            android:textSize="@dimen/_12sdp"
            />
        <TextView
            android:id="@+id/orderid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_toStartOf="@+id/T_order_id"
            android:text="@string/orderid"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:textColor="#000000"
            android:textSize="@dimen/_12sdp"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/T_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:text="100"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:textColor="#000"
            android:textSize="@dimen/_12sdp"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price"
            android:layout_below="@+id/T_date"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/T_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/price"
            android:layout_below="@+id/T_date"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:maxLines="1"
            />


        <TextView
            android:id="@+id/T_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/InProgress"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:textColor="#fff"
            android:background="@drawable/bc_orderstatus"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:layout_below="@+id/T_order_id"
            />
        <!--<TextView
            android:id="@+id/T_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="status"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_1sdp"
            android:textColor="#838383"
            android:textSize="@dimen/_12sdp"
            android:layout_toEndOf="@+id/T_order_status"
            android:layout_below="@+id/T_user_name"
            />-->


    </RelativeLayout>


</androidx.cardview.widget.CardView>