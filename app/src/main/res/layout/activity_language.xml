<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/black"
    app:cardCornerRadius="@dimen/_15sdp"
    android:background="@color/red">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose"
            android:textSize="@dimen/_16sdp"
            android:background="@color/red"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="@dimen/_8sdp"
            />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/bc_profile"
            android:layout_marginEnd="@dimen/_40sdp"
            android:onClick="Btn_English"
            android:layout_marginStart="@dimen/_40sdp"
            android:id="@+id/Rela_English"
            android:layout_marginTop="@dimen/_60sdp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/english"
                android:textSize="@dimen/_15sdp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white" />

            <!--<ImageView-->
            <!--android:layout_width="@dimen/_20sdp"-->
            <!--android:layout_height="@dimen/_20sdp"-->
            <!--android:src="@drawable/arrow"-->
            <!--android:id="@+id/arrow_english"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_marginEnd="@dimen/_20sdp" />-->

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/bc_profile"
            android:layout_marginTop="@dimen/_20sdp"
            android:onClick="Btn_Arabic"
            android:layout_marginEnd="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_40sdp"
            android:id="@+id/Rela_Arabic"
            android:layout_below="@+id/Rela_English">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/arabic"
                android:layout_centerInParent="true"
                android:textSize="@dimen/_15sdp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white" />
            <!--<ImageView-->
            <!--android:layout_width="@dimen/_20sdp"-->
            <!--android:layout_height="@dimen/_20sdp"-->
            <!--android:src="@drawable/arrow"-->
            <!--android:id="@+id/arrow_arabic"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_marginEnd="@dimen/_20sdp" />-->

        </RelativeLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>