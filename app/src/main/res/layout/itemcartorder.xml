<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.cutzegypt.data.remote.model.ListCartResponse.Data.CartItem" />
    </data>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_2sdp"
        app:cardElevation="1dp"
        android:background="@color/black"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/Img_Product"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_85sdp"
                app:imageUrl="@{model.product.image}"
                android:scaleType="fitXY"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                />


            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_135sdp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:visibility="gone"
                android:id="@+id/PannerCard"
                app:cardCornerRadius="@dimen/_3sdp"
                app:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/Title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toEndOf="@+id/Img_Product"
                android:ellipsize="end"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@raw/cairo"
                android:maxLines="1"
                android:text= "@{model.product.title}"
                android:textColor="@color/white"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Title"
                android:id="@+id/T_Counter"
                android:text= "@{@string/qty(model.qty)}"
                android:fontFamily="@raw/cairo"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_toEndOf="@+id/Img_Product"
                />
            <TextView
                android:id="@+id/T_SalePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/T_Counter"
                android:layout_marginStart="10dp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_toEndOf="@+id/Img_Product"
                android:ellipsize="end"
                android:maxLines="1"
                android:text= "@{@string/price_cart(model.product.finalPrice)}"
                android:fontFamily="@raw/cairo"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/T_TotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/T_SalePrice"
                android:layout_marginStart="10dp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_toEndOf="@+id/Img_Product"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@raw/cairo"
                android:textColor="@color/white"
                />




        </RelativeLayout>
    </RelativeLayout>
</layout>